{% extends '../layout.njk' %}

{% block title %}
<link rel="stylesheet" href="../../admin/chef/create.css">
<link rel="stylesheet" href="../../admin/chef/chefs.css">
<link rel="stylesheet" href="../../admin/menu-global.css">

<title> Gerenciar Chefs </title>
{% endblock title %}

{% block links %}
{% endblock links %}


{% block content %}

<div class="button-create">
	<a href="/admin/chefs/create">Criar Chef</a>
</div>

<section class="gerenciar-chefs">
	<div class="gerenciar">
		<h1>Chefs dispon√≠veis</h1>
	</div>
</section>

<section class="cards">
	{% for chef in chefs %}
	<div class="card" id="{{chef.id}}">
		<img src="{{chef.avatar_url}}" alt="{{chef.id}}">

		<div class="info-left">
			<div class="info">
				<h1>{{chef.name}}</h1>
				<p>Chef</p>
			</div>
		</div>

		<div class="visualizar">
			<a href="/admin/chefs/{{chef.id}}">Visualizar</a>
		</div>
	</div>
	{% endfor %}
</section>

{% endblock content %}

{% block footer %}
<footer>
	<p>Todos os direitos reservados, receitas Foodfy.</p>
</footer>

{% endblock footer %}