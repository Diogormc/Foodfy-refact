{%extends '../layout.njk' %}


{% block title %}
<link rel="stylesheet" href="/admin/chef/show.css">
<title>{{chef.name}}</title>
{% endblock title %}

{% block header %}
<a href="/admin/recipes">
	<div class="logo">
		<img src="/assets/logo2.png" alt="">
</a>
</div>
{% endblock header %}

{% block content %}

<div class="cards">
	<div class="card">
		<section class="details">
			<div class="top">
				<h5>Chef: {{chefs.name}}</h5>

				<div class="edit"><a href="/admin/chefs/{{chef.id}}/edit" class="button">
						Editar</a>
				</div>
			</div>

			<div class="recipe-image" id="{{chef.name}}>
				<img src="{{chef.avatar_url}}" alt="imagem de {{chef.name}}">
			</div>

			<div class="recipe-info">
				<div>
					<p>{{chef.name}}</p>
				</div>
			</div>
	


		</section>
	</div>
</div>

{% endblock content %}