{%extends '../layout.njk' %}


{% block title %}
<link rel="stylesheet" href="/admin/chef/show.css">
<title>{{chef.name}}</title>
{% endblock title %}

{% block header %}
<a href="/admin/recipes">
	<div class="logo">
		<img src="/assets/logo2.png" alt="">
</a>
</div>
{% endblock header %}

{% block content %}

<div class="cards">
	<div class="card">
		<section class="details">
			<div class="top">
				<h5>Chef: {{chef.name}} </h5>

				<div class="edit">
					<a href="/admin/chefs/{{chef.id}}/edit" class="button">Editar</a>
				</div>
			</div>

			<div class="recipe-image">
				<img src="{{chef.avatar_url}}" alt="{{chef.name}}">
			</div>

			<div class="recipe-info">
				<div>
					<h2>{{chef.name}}</h2>
					<p>4 Receitas</p>
				</div>
			</div>
	


		</section>
	</div>
</div>

{% endblock content %}