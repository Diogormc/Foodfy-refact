{% extends '../layout.njk' %}

{% block title %}
<link rel="stylesheet" href="create.css">
<link rel="stylesheet" href="../../admin/recipes.css">
<title> Gerenciar Receitas </title>
{% endblock title %}

{% block links %}

{% endblock links %}

{% block header %}
			<div class="black">
				<div class="logo">
					<img src="/assets/logo2.png" alt="">
					<a class="top-link-recipe" href="/admin/recipes">Receitas</a>
					<a class="top-link-chefs" href="/admin/chefs">Chefs</a>
				</div>
			</div>
			
{% endblock header %}

{% block content %}

<div class="button-create">
	<a href="/admin/recipes/create">Criar Receita</a>
</div>

<section class="gerenciar-receitas">
	<div class="gerenciar">
		<h1>Gerenciar Receitas</h1>
	</div>
</section>

<section class="cards">
	{% for recipe in recipes %}
		<div class="card" id="{{recipe.id}}">
			<img src="{{recipe.image}}" alt="{{recipe.id}}">

		<div class="info-left">
			<div class="info">
				<h1>{{recipe.title}}</h1>
				<p>{{recipe.author}}</p>
			</div>
		</div>

			<div class="visualizar">
				<a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
      		</div>
			  
		</div>
	{% endfor %}
</section>

{% endblock content %}

{% block footer %}
<footer>
	<p>Todos os direitos reservados, receitas Foodfy.</p>
</footer>

{% endblock footer %}

