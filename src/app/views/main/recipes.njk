{%extends '../main/layout.njk' %}

{% block head %}
<title>Receitas</title>
<link rel="stylesheet" href="recipes.css">
{% endblock head%}

{% block content %}

	<header>
		<a href="/">
			<img src="/assets/logo.png" alt="Logo Foodfy" />
		</a>
		<a href="/about">Sobre</a>
		<a href="/recipes">Receitas</a>
		<a href="/admin">
		</a>
 </header>
</section>


<section class="cards">
	{% for item in items %}
	<div class="card" name="{{item.title}}">
		<img src="{{item.image}}">
		<div class="info">
			<h1>{{item.title}}</h1>
			<p>{{item.author}}</p>
		</div>
	</div>
	{% endfor %}

</section>

<script src="/scripts/recipes.js"></script>


<footer>
	<p>Todos os direitos reservados, receitas Foodfy.</p>
</footer>

{% endblock %}
