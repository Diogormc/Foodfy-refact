{%extends '../layout.njk' %}


{%block title%}
    <title>Foodfy</title>
{%endblock title%}

{% block content%}
<header>
    <link rel="stylesheet" href="../../main/infoRecipes.css">
</header>

<main>
    <section class="recipe">
        <div id="img">
            <img src="{{recipe.image}}" alt="{{recipe.id}}">
            <h3>{{recipe.title}}</h3>
            <p>{{recipe.chefs_name}}</p>
        </div>

        <div id="ingredientes">
            <div class="subtitle">
                <h1>Ingredientes</h1> <button class="esconder">Esconder</button>
            </div>
            <ul class='hide-ingredientes '>
                {%for ingredient in recipe.ingredients%}
                <li>{{ingredient}}</li>

                {%endfor%}
            </ul>
        </div>
        <div id="prepare">
            <div class="subtitle">
                <h1>Modo de preparo</h1> <button class="mostrar">Mostrar</button>
            </div>
            <p class='hide-prepare display'>{{recipe.preparation}}</p>
        </div>
        <div id="information">
            <div class="subtitle">
                <h1>Informações adicionais</h1> <button class="esconder-information">Esconder</button>
            </div>
            <p class='hide-information '>{{recipe.information}}</p>
        </div>
    </section>
</main>

<script src="/scripts/infoRecipes.js"></script>
{%endblock%}